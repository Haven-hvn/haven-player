{
  "name": "haven-player",
  "version": "1.0.0",
  "description": "Haven Player - A modern video player application",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron-forge start",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "dev": "concurrently \"npm run watch\" \"npm run start:dev\"",
    "start:dev": "cross-env NODE_ENV=development electron-forge start",
    "watch": "cross-env NODE_OPTIONS=--max-old-space-size=8192 webpack --config webpack.config.js --watch",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 webpack --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
